<%- include('./partials/header') %>

<%- include('./partials/navbar') %>

 

    <!-- blogs -->
      <div class="max-w-5xl mx-auto mt-12 px-6">

       <%if(posts.length==0){%>
        <div class="flex justify-center">
            <div class="text-2xl font-bold text-zinc-400">No posts yet</div>
        </div>
          
       <%}%>


    <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 gap-6">
      
      <% posts.reverse().forEach((post)=>{ %>

      <div class="flex flex-col bg-zinc-800 rounded-2xl p-5 shadow-lg hover:shadow-orange-500/10 transition duration-300 border border-zinc-700">
        <div class="flex items-center gap-3 mb-4">
          <a href="<%=post.user.profilePic%>" class="h-10 w-10">
            <img class="rounded-[50%] w-10 h-10 object-cover" src="<%=post.user.profilePic%>" alt="profile">
          </a>
<h3 class="text-orange-400 font-semibold mb-2">
          <%= post.user.username %>
        </h3>
        </div>
        
        
        <p class="grow  text-zinc-300 text-sm leading-relaxed">
          <%= post.content %>
        </p>

        

        <div class="flex justify-between mt-4 text-sm">
          <a href="/like/<%=post._id %>"> <%= (post.likes.some(id=>id.toString()===user._id.toString())) ? 'Like â¤ï¸' : 'Like ğŸ¤'%>
          </a>
          <div class=" text-sm text-zinc-400">
          <%= post.likes.length %> likes
        </div>
          
        </div>

      </div>

      <% }) %>

    </div>
  </div>


